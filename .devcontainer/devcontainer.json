{
  "name": "Codespace with PostgreSQL",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "forwardPorts": [5432],
  "containerEnv": {
    "POSTGRES_PASSWORD": "postgres",
    "POSTGRES_DB": "appdb"
  },
  "postCreateCommand": "bash .devcontainer/scripts/setup-postgres.sh",
  "postStartCommand": "bash .devcontainer/scripts/start-postgres.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-ossdata.vscode-postgresql"
      ]
    }
  }
}